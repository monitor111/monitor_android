<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#83f2a1"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_tlg"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginBottom="156dp"
        android:text="Button_telegram"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_fb"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginEnd="104dp"
        android:text="Button_facebook"
        app:layout_constraintBottom_toTopOf="@+id/btn_tlg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_yt" />

    <Button
        android:id="@+id/btn_yt"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="112dp"
        android:text="Button_youtube"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>